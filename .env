# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://honeynet:honeynet123@localhost:5432/honeynet
DB_HOST=localhost
DB_PORT=5432
DB_NAME=honeynet
DB_USER=honeynet
DB_PASSWORD=honeynet123

# Cowrie Configuration
COWRIE_LOG_PATH=./mock-data/cowrie.json
COWRIE_CONFIG_PATH=/home/cowrie/cowrie/etc/cowrie.cfg
COWRIE_HONEYFILES_PATH=/home/cowrie/cowrie/honeyfs
